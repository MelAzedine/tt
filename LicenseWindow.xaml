<Window x:Class="Trident.MITM.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arthemis Control - License"
        Width="700" Height="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="850"
        MinWidth="650"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True"
        Loaded="Window_Loaded"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- Palette premium purple/cyan -->
        <SolidColorBrush x:Key="Bg0" Color="#0A0E1A"/>
        <SolidColorBrush x:Key="Bg1" Color="#111827"/>
        <SolidColorBrush x:Key="Bg2" Color="#1F2937"/>
        <SolidColorBrush x:Key="Card" Color="#1E293B"/>
        <SolidColorBrush x:Key="CardHover" Color="#334155"/>
        <SolidColorBrush x:Key="Stroke" Color="#475569"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#A855F7"/>
        <SolidColorBrush x:Key="AccentPurpleHover" Color="#C084FC"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#06B6D4"/>
        <SolidColorBrush x:Key="AccentSilver" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="Fg" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="FgSecondary" Color="#94A3B8"/>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#A855F7" Offset="0"/>
            <GradientStop Color="#7C3AED" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1E293B" Offset="0"/>
            <GradientStop Color="#1F2937" Offset="1"/>
        </LinearGradientBrush>

        <!-- Animation d'entrée -->
        <Storyboard x:Key="WindowFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Style x:Key="PremiumButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.4" ShadowDepth="0" Color="#A855F7"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentPurpleHover}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20" Opacity="0.6" ShadowDepth="0" Color="#C084FC"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PremiumButton}">
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="1"
                                BorderBrush="{StaticResource Stroke}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentPurple}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" 
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                            </Border>
                            <ContentPresenter x:Name="ContentSite" 
                                              Grid.Column="0"
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <ToggleButton x:Name="ToggleButton" 
                                          Grid.Column="1"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Width="30">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{StaticResource Bg2}" 
                                                BorderBrush="{StaticResource Stroke}" 
                                                BorderThickness="0,0,0,0"
                                                CornerRadius="0,8,8,0">
                                            <Path x:Name="Arrow" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  Data="M 0 0 L 4 4 L 8 0 Z" 
                                                  Fill="{StaticResource Fg}"
                                                  Margin="0,0,8,0"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="Popup" 
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" 
                                        Background="{StaticResource Bg2}" 
                                        BorderBrush="{StaticResource Stroke}"
                                        BorderThickness="1"
                                        CornerRadius="0,0,8,8"
                                        MaxHeight="200">
                                    <ScrollViewer Margin="4,6,4,6" 
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{StaticResource FgSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="{StaticResource Bg2}"/>
                    <Setter Property="Foreground" Value="{StaticResource Fg}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Bd" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{StaticResource Stroke}"
                                        BorderThickness="0,0,0,1"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="true">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource CardHover}"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentPurple}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter Property="Foreground" Value="{StaticResource FgSecondary}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <!-- Fond avec effet premium -->
    <Border BorderBrush="{StaticResource Stroke}" BorderThickness="1" CornerRadius="12" Background="{StaticResource Bg0}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" Opacity="0.5" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        
        <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <!-- Header premium -->
            <Border Grid.Row="0" Background="{StaticResource Bg1}" BorderBrush="{StaticResource Stroke}" BorderThickness="0,0,0,1">
                <Grid Margin="30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border CornerRadius="12" Background="{StaticResource Bg2}" Padding="12" Margin="0,0,20,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                            </Border.Effect>
                            <Image Source="pack://application:,,,/Trident.MITM.App;component/Assets/LOGO.png" 
                                   Height="56" Width="56" Stretch="Uniform" 
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource AppName}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource Fg}">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="{DynamicResource License}" 
                                       Foreground="{StaticResource FgSecondary}" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <ComboBox x:Name="LanguageCombo" Width="140" SelectionChanged="LanguageCombo_SelectionChanged" Margin="0,0,15,0">
                            <ComboBoxItem Content="🇫🇷 Français" Tag="French"/>
                            <ComboBoxItem Content="🇬🇧 English" Tag="English"/>
                            <ComboBoxItem Content="🇪🇸 Español" Tag="Spanish"/>
                            <ComboBoxItem Content="🇩🇪 Deutsch" Tag="German"/>
                        </ComboBox>
                        <Button Content="✕" Click="CloseButton_Click" Padding="16,10" FontSize="18" FontWeight="Bold"
                                Background="{StaticResource Bg2}" Foreground="{StaticResource FgSecondary}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource Stroke}"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16,0"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contenu premium -->
            <Border Grid.Row="1" Margin="30" Background="{StaticResource CardGradient}"
                    BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                    CornerRadius="16" Padding="32">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" Opacity="0.4" ShadowDepth="0" Color="Black"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Toggle entre Login et Register -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="LoginTabButton" 
                                Grid.Column="0"
                                Content="{DynamicResource LoginTitle}" 
                                Style="{StaticResource PremiumButton}"
                                Margin="0,0,10,0"
                                Click="ShowLoginForm_Click"
                                Tag="Login"/>
                        <Button x:Name="RegisterTabButton" 
                                Grid.Column="1"
                                Content="{DynamicResource RegisterTitle}" 
                                Style="{StaticResource SecondaryButton}"
                                Click="ShowRegisterForm_Click"
                                Tag="Register"/>
                    </Grid>
                    
                    <!-- Notifications Status -->
                    <TextBlock x:Name="StatusText" 
                               Text="{DynamicResource Waiting}"
                               Foreground="{StaticResource AccentPurple}" 
                               TextWrapping="Wrap" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               LineHeight="20" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"/>

                    <!-- Formulaire de Login -->
                    <Border x:Name="LoginForm" 
                            Background="{StaticResource Bg2}" 
                            CornerRadius="12" 
                            Padding="30" 
                            Margin="0,0,0,20">
                    <StackPanel>
                            <TextBlock Text="{DynamicResource Username}" 
                                       Foreground="{StaticResource Fg}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="LoginUsernameTextBox" 
                                     FontSize="14" 
                                     Height="45"
                                     Margin="0,0,0,20"
                                     KeyDown="LoginUsernameTextBox_KeyDown"/>
                            
                            <TextBlock Text="{DynamicResource Password}" 
                                       Foreground="{StaticResource Fg}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="LoginPasswordBox" 
                                             Grid.Column="0"
                                             Background="{StaticResource Bg2}"
                                             Foreground="{StaticResource Fg}"
                                             BorderBrush="{StaticResource Stroke}"
                                             BorderThickness="1"
                                             Padding="16,12,50,12"
                                             FontSize="14"
                                             Height="45"
                                             PasswordChanged="LoginPasswordBox_PasswordChanged"
                                             KeyDown="LoginPasswordBox_KeyDown">
                                    <PasswordBox.Template>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                                    <Setter TargetName="border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </PasswordBox.Template>
                                </PasswordBox>
                                <TextBox x:Name="LoginPasswordTextBox" 
                                         Grid.Column="0"
                                         Background="{StaticResource Bg2}"
                                         Foreground="{StaticResource Fg}"
                                         BorderBrush="{StaticResource Stroke}"
                                         BorderThickness="1"
                                         Padding="16,12,50,12"
                                         FontSize="14"
                                         Height="45"
                                         Visibility="Collapsed"
                                         TextChanged="LoginPasswordTextBox_TextChanged"
                                         KeyDown="LoginPasswordTextBox_KeyDown">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                                    <Setter TargetName="border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                                <Button x:Name="LoginPasswordToggleButton"
                                        Grid.Column="1"
                                        Content="👁"
                                        Background="Transparent"
                                        Foreground="{StaticResource FgSecondary}"
                                        BorderThickness="0"
                                        Padding="10,0"
                                        FontSize="18"
                                        Cursor="Hand"
                                        Click="LoginPasswordToggleButton_Click"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"/>
                            </Grid>
                            
                            <Button x:Name="BtnLogin" 
                                    Content="{DynamicResource LoginButton}" 
                                    Style="{StaticResource PremiumButton}"
                                    Click="LoginButton_Click"
                                    FontSize="16"
                                    Padding="30,15"
                                    HorizontalAlignment="Center"/>
                            
                            <Button Content="{DynamicResource SwitchToRegister}" 
                                    Background="Transparent"
                                    Foreground="{StaticResource AccentPurple}"
                                    BorderThickness="0"
                                    Padding="0"
                                    FontSize="13"
                                    Margin="0,15,0,0"
                                    Click="ShowRegisterForm_Click"
                                    Cursor="Hand"
                                    HorizontalAlignment="Center"/>
                    </StackPanel>
        </Border>

                    <!-- Formulaire de Register -->
                    <Border x:Name="RegisterForm" 
                            Background="{StaticResource Bg2}" 
                            CornerRadius="12" 
                            Padding="30" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
            <StackPanel>
                            <TextBlock Text="{DynamicResource Username}" 
                                       Foreground="{StaticResource Fg}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="RegisterUsernameTextBox" 
                                     FontSize="14" 
                                     Height="45"
                                     Margin="0,0,0,20"/>
                            
                            <TextBlock Text="{DynamicResource Password}" 
                                       Foreground="{StaticResource Fg}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="RegisterPasswordBox" 
                                             Grid.Column="0"
                                             Background="{StaticResource Bg2}"
                                             Foreground="{StaticResource Fg}"
                                             BorderBrush="{StaticResource Stroke}"
                                             BorderThickness="1"
                                             Padding="16,12,50,12"
                                             FontSize="14"
                                             Height="45"
                                             PasswordChanged="RegisterPasswordBox_PasswordChanged">
                                    <PasswordBox.Template>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                                    <Setter TargetName="border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </PasswordBox.Template>
                                </PasswordBox>
                                <TextBox x:Name="RegisterPasswordTextBox" 
                                         Grid.Column="0"
                                         Background="{StaticResource Bg2}"
                                         Foreground="{StaticResource Fg}"
                                         BorderBrush="{StaticResource Stroke}"
                                         BorderThickness="1"
                                         Padding="16,12,50,12"
                                         FontSize="14"
                                         Height="45"
                                         Visibility="Collapsed"
                                         TextChanged="RegisterPasswordTextBox_TextChanged">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                                    <Setter TargetName="border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="0" Color="#A855F7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                                <Button x:Name="RegisterPasswordToggleButton"
                                        Grid.Column="1"
                                        Content="👁"
                                        Background="Transparent"
                                        Foreground="{StaticResource FgSecondary}"
                                        BorderThickness="0"
                                        Padding="10,0"
                                        FontSize="18"
                                        Cursor="Hand"
                                        Click="RegisterPasswordToggleButton_Click"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"/>
                            </Grid>
                            
                            <TextBlock Text="{DynamicResource LicenseKey}" 
                                       Foreground="{StaticResource AccentPurple}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,20,0,12"/>
                            <Grid Margin="0,0,0,30">
                                <TextBox x:Name="RegisterLicenseKeyTextBox" 
                                         Background="{StaticResource Bg2}"
                                         Foreground="{StaticResource Fg}"
                                         BorderBrush="{StaticResource AccentPurple}"
                                         BorderThickness="3"
                                         Padding="16,14"
                                         FontSize="15" 
                                         FontFamily="Consolas"
                                         FontWeight="SemiBold"
                                         Height="55"
                                         TextWrapping="NoWrap"
                                         VerticalContentAlignment="Center"
                                         GotFocus="RegisterLicenseKeyTextBox_GotFocus"
                                         LostFocus="RegisterLicenseKeyTextBox_LostFocus"
                                         TextChanged="RegisterLicenseKeyTextBox_TextChanged">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="10">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="4,0" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                                    <Setter TargetName="border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="15" Opacity="0.5" ShadowDepth="0" Color="#A855F7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                                <TextBlock x:Name="RegisterLicenseKeyPlaceholder"
                                           Text="⚠️ Entrez votre clé de licence ici..."
                                           Foreground="{StaticResource AccentPurple}"
                                           FontSize="15"
                                           FontFamily="Consolas"
                                           FontWeight="SemiBold"
                                           Margin="16,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Visible"
                                           Opacity="0.7"/>
                            </Grid>
                            
                            <Button x:Name="BtnRegister" 
                                    Content="{DynamicResource RegisterButton}" 
                                    Style="{StaticResource PremiumButton}"
                                    Click="RegisterButton_Click"
                                    FontSize="16"
                                    Padding="30,15"
                                    HorizontalAlignment="Center"/>
                            
                            <Button Content="{DynamicResource SwitchToLogin}" 
                                    Background="Transparent"
                                    Foreground="{StaticResource AccentPurple}"
                                    BorderThickness="0"
                                    Padding="0"
                                    FontSize="13"
                                    Margin="0,15,0,0"
                                    Click="ShowLoginForm_Click"
                                    Cursor="Hand"
                                    HorizontalAlignment="Center"/>
                </StackPanel>
                    </Border>

                    <Button x:Name="QuitBtn" Content="{DynamicResource Quit}" Margin="0,20,0,0"
                            Style="{StaticResource SecondaryButton}"
                            Click="QuitBtn_Click"
                            HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource Bg1}" BorderBrush="{StaticResource Stroke}" BorderThickness="0,1,0,0">
                <TextBlock Text="Version 1.0.0.0" Foreground="{StaticResource FgSecondary}"
                           HorizontalAlignment="Right" Margin="30,15" FontSize="11"/>
            </Border>
    </Grid>
    </Border>
</Window>
