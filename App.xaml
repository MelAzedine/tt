<Application x:Class="Trident.MITM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             ShutdownMode="OnExplicitShutdown">

    <Application.Resources>
        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- PROFESSIONAL GAMING UI - ARTHEMIS CONTROL PRO               -->
        <!-- Modern Dark Theme with Neon Accents & Smooth Animations    -->
        <!-- ═══════════════════════════════════════════════════════════ -->

        <!-- ═══ COLOR PALETTE ═══ -->
        <SolidColorBrush x:Key="B_Bg0" Color="#0A0B10"/>
        <SolidColorBrush x:Key="B_Bg1" Color="#12131A"/>
        <SolidColorBrush x:Key="B_Bg2" Color="#1A1B24"/>
        <SolidColorBrush x:Key="B_Card" Color="#1F2029"/>
        <SolidColorBrush x:Key="B_CardHover" Color="#252632"/>
        <SolidColorBrush x:Key="B_Stroke" Color="#2A2B38"/>
        
        <!-- Neon Accents -->
        <SolidColorBrush x:Key="B_AccentRed" Color="#FF3366"/>
        <SolidColorBrush x:Key="B_AccentCyan" Color="#00D9FF"/>
        <SolidColorBrush x:Key="B_AccentPurple" Color="#B24DFF"/>
        <SolidColorBrush x:Key="B_AccentGold" Color="#FFD700"/>
        <SolidColorBrush x:Key="B_Accent" Color="#00D9FF"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="B_Fg" Color="#F2F7FF"/>
        <SolidColorBrush x:Key="B_Sub" Color="#A0A8B8"/>
        <SolidColorBrush x:Key="B_Muted" Color="#6B7280"/>
        
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="B_GradientRed" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF3366" Offset="0"/>
            <GradientStop Color="#FF6B99" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="B_GradientCyan" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00D9FF" Offset="0"/>
            <GradientStop Color="#66E5FF" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- ═══ EFFECTS ═══ -->
        <DropShadowEffect x:Key="B_GlowRed" Color="#FF3366" BlurRadius="20" Opacity="0.8" ShadowDepth="0"/>
        <DropShadowEffect x:Key="B_GlowCyan" Color="#00D9FF" BlurRadius="20" Opacity="0.8" ShadowDepth="0"/>
        <DropShadowEffect x:Key="B_CardShadow" Color="#000000" BlurRadius="25" Opacity="0.6" ShadowDepth="0"/>
        
        <!-- ═══ PROFESSIONAL COMBOBOX ═══ -->
        <Style x:Key="ProfessionalComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource B_Bg2}"/>
            <Setter Property="Foreground" Value="{StaticResource B_Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- ═══ PROFESSIONAL SLIDER ═══ -->
        <Style x:Key="ProfessionalSlider" TargetType="Slider">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

