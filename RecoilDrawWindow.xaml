<Window x:Class="Trident.MITM.RecoilDrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dessine ton recul" Height="520" Width="820"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip" Background="#1a1a1f">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="DurÃ©e (ms)" Foreground="White" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <Slider x:Name="DurationSlider" Minimum="300" Maximum="2000" Value="1000" Width="200" Margin="0,0,12,0"/>
            <TextBlock Text="{Binding ElementName=DurationSlider, Path=Value, StringFormat=F0}" Foreground="#ff5b5b" FontWeight="Bold" VerticalAlignment="Center" Width="50"/>
            <Separator Width="20" Opacity="0"/>
            <TextBlock Text="Amplitude (max)" Foreground="White" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <Slider x:Name="AmpSlider" Minimum="1000" Maximum="6000" Value="3500" Width="200" Margin="0,0,12,0"/>
            <TextBlock Text="{Binding ElementName=AmpSlider, Path=Value, StringFormat=F0}" Foreground="#ff5b5b" FontWeight="Bold" VerticalAlignment="Center" Width="60"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#121216" CornerRadius="8" BorderBrush="#2a2a31" BorderThickness="1">
            <Canvas x:Name="DrawCanvas" Background="#0c0c10" ClipToBounds="True"
                    Loaded="DrawCanvas_Loaded"
                    SizeChanged="DrawCanvas_SizeChanged"
                    MouseLeftButtonDown="DrawCanvas_MouseLeftButtonDown"
                    MouseMove="DrawCanvas_MouseMove"
                    MouseLeftButtonUp="DrawCanvas_MouseLeftButtonUp"/>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Right">
            <Button Content="Effacer" Click="Clear_Click" Padding="14,8" Margin="0,0,8,0"/>
            <Button Content="Annuler" Click="Cancel_Click" Padding="14,8" Margin="0,0,8,0"/>
            <Button Content="Appliquer" Click="Apply_Click" Padding="16,8" Background="#ff5b5b" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>


