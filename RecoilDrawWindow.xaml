<Window x:Class="Trident.MITM.RecoilDrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ¯ Recoil Pattern Designer - Arthemis Control Pro" 
        Height="680" Width="1000"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResizeWithGrip" 
        Background="#0A0B10">
    
    <Window.Resources>
        <!-- Professional Gaming Colors -->
        <SolidColorBrush x:Key="Bg0" Color="#0A0B10"/>
        <SolidColorBrush x:Key="Bg1" Color="#12131A"/>
        <SolidColorBrush x:Key="Bg2" Color="#1A1B24"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#06B6D4"/>
        <SolidColorBrush x:Key="AccentRed" Color="#FF3366"/>
        <SolidColorBrush x:Key="Fg" Color="#F2F7FF"/>
        <SolidColorBrush x:Key="FgSub" Color="#A0A8B8"/>
        
        <!-- Professional Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1B24"/>
            <Setter Property="Foreground" Value="#F2F7FF"/>
            <Setter Property="BorderBrush" Value="#2A2B38"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#06B6D4"/>
                                <Setter TargetName="border" Property="Background" Value="#252632"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF3366" Offset="0"/>
                        <GradientStop Color="#FF6B99" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource Bg1}" 
                CornerRadius="12" Padding="24,20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.5" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="12"
                        Background="{StaticResource AccentCyan}"
                        Margin="0,0,20,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#06B6D4" BlurRadius="20" Opacity="0.8" ShadowDepth="0"/>
                    </Border.Effect>
                    <TextBlock Text="ðŸŽ¯" FontSize="28" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Title and Description -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="RECOIL PATTERN DESIGNER" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource Fg}"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Draw your custom recoil compensation pattern â€¢ Professional weapon control" 
                               FontSize="13" 
                               Foreground="{StaticResource FgSub}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Controls Panel -->
        <Border Grid.Row="1" Background="{StaticResource Bg1}" 
                CornerRadius="12" Padding="20,16" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Duration Slider -->
                <StackPanel Grid.Column="0">
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="â±ï¸ Duration (ms)" 
                                   Foreground="{StaticResource Fg}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   HorizontalAlignment="Left"/>
                        <Border HorizontalAlignment="Right" 
                                Background="{StaticResource AccentCyan}"
                                CornerRadius="6" Padding="12,4">
                            <TextBlock Text="{Binding ElementName=DurationSlider, Path=Value, StringFormat=F0}" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="14"/>
                        </Border>
                    </Grid>
                    <Slider x:Name="DurationSlider" 
                            Minimum="300" Maximum="2000" Value="1000" 
                            Height="8" 
                            Background="{StaticResource Bg2}"
                            Foreground="{StaticResource AccentCyan}"/>
                </StackPanel>
                
                <!-- Amplitude Slider -->
                <StackPanel Grid.Column="2">
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="ðŸ“Š Amplitude (max)" 
                                   Foreground="{StaticResource Fg}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   HorizontalAlignment="Left"/>
                        <Border HorizontalAlignment="Right" 
                                Background="{StaticResource AccentRed}"
                                CornerRadius="6" Padding="12,4">
                            <TextBlock Text="{Binding ElementName=AmpSlider, Path=Value, StringFormat=F0}" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="14"/>
                        </Border>
                    </Grid>
                    <Slider x:Name="AmpSlider" 
                            Minimum="1000" Maximum="6000" Value="3500" 
                            Height="8"
                            Background="{StaticResource Bg2}"
                            Foreground="{StaticResource AccentRed}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Drawing Canvas -->
        <Border Grid.Row="2" Background="{StaticResource Bg2}" 
                CornerRadius="16" BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#06B6D4" Offset="0"/>
                    <GradientStop Color="#FF3366" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="25" Opacity="0.6" ShadowDepth="0"/>
            </Border.Effect>
            
            <Grid>
                <!-- Grid Background Pattern -->
                <Canvas Background="#0C0D12" ClipToBounds="True">
                    <!-- Grid lines would be drawn here programmatically -->
                </Canvas>
                
                <!-- Main Drawing Canvas -->
                <Canvas x:Name="DrawCanvas" 
                        Background="Transparent" 
                        ClipToBounds="True"
                        Loaded="DrawCanvas_Loaded"
                        SizeChanged="DrawCanvas_SizeChanged"
                        MouseLeftButtonDown="DrawCanvas_MouseLeftButtonDown"
                        MouseMove="DrawCanvas_MouseMove"
                        MouseLeftButtonUp="DrawCanvas_MouseLeftButtonUp"
                        Cursor="Cross"/>
                
                <!-- Watermark -->
                <TextBlock Text="âœï¸ DRAW YOUR PATTERN" 
                           FontSize="18" FontWeight="Bold"
                           Foreground="#1A1B24" Opacity="0.3"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>
        </Border>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Info Panel -->
            <Border Grid.Column="0" Background="{StaticResource Bg1}" 
                    CornerRadius="10" Padding="16,12" Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¡" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Click and drag on the canvas to draw your recoil compensation pattern" 
                               Foreground="{StaticResource FgSub}" 
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="ðŸ—‘ï¸ Clear" 
                        Click="Clear_Click" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,10,0"/>
                <Button Content="âœ–ï¸ Cancel" 
                        Click="Cancel_Click" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,10,0"/>
                <Button Content="âœ”ï¸ Apply Pattern" 
                        Click="Apply_Click" 
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
