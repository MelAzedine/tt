                                                                       Foreground="{StaticResource FgSecondary}" 
                                                                       FontSize="12"/>
                                                        </StackPanel>
                                                        <CheckBox Grid.Column="1" 
                                                                  x:Name="DisableSuperfetchCheckBox"
                                                                  IsChecked="False"
                                                                  Style="{StaticResource ToggleSwitch}"
                                                                  VerticalAlignment="Center"/>
                                                    </Grid>
                                                    
                                                    <Grid Margin="0,0,0,15">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Désactiver Windows Search" 
                                                                       Foreground="{StaticResource Fg}" 
                                                                       FontSize="15" 
                                                                       FontWeight="SemiBold" 
                                                                       Margin="0,0,0,5"/>
                                                            <TextBlock Text="Désactive l'indexation de recherche Windows" 
                                                                       Foreground="{StaticResource FgSecondary}" 
                                                                       FontSize="12"/>
                                                        </StackPanel>
                                                        <CheckBox Grid.Column="1" 
                                                                  x:Name="DisableWindowsSearchCheckBox"
                                                                  IsChecked="False"
                                                                  Style="{StaticResource ToggleSwitch}"
                                                                  VerticalAlignment="Center"/>
                                                    </Grid>
                                                    
                                                    <Grid Margin="0,0,0,15">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Désactiver Télémetrie Windows" 
                                                                       Foreground="{StaticResource Fg}" 
                                                                       FontSize="15" 
                                                                       FontWeight="SemiBold" 
                                                                       Margin="0,0,0,5"/>
                                                            <TextBlock Text="Désactive la collecte de données Windows" 
                                                                       Foreground="{StaticResource FgSecondary}" 
                                                                       FontSize="12"/>
                                                        </StackPanel>
                                                        <CheckBox Grid.Column="1" 
                                                                  x:Name="DisableTelemetryCheckBox"
                                                                  IsChecked="False"
                                                                  Style="{StaticResource ToggleSwitch}"
                                                                  VerticalAlignment="Center"/>
                                                    </Grid>
                                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="200"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                   Text="Mode Économie" 
                                                                   Foreground="{StaticResource Fg}" 
                                                                   FontSize="15" 
                                                                   FontWeight="SemiBold" 
                                                                   VerticalAlignment="Center"/>
                                                        <ComboBox Grid.Column="1" 
                                                                  x:Name="PowerModeComboBox"
                                                                  Height="40">
                                                            <ComboBoxItem Content="Haute Performance" Tag="High" IsSelected="True"/>
                                                            <ComboBoxItem Content="Équilibré" Tag="Balanced"/>
                                                            <ComboBoxItem Content="Économie" Tag="PowerSaver"/>
                                                        </ComboBox>
                                                    </Grid>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
