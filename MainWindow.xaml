<Window x:Class="Trident.MITM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Arthemis Control" Height="1000" Width="1800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        SnapsToDevicePixels="True" UseLayoutRounding="True"
        WindowStyle="None" AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- Police d'écriture moderne -->
        <FontFamily x:Key="AppFont">Segoe UI Variable</FontFamily>
        
        <!-- NOUVELLE PALETTE ULTRA-MODERNE - Orange/Teal Dynamic Theme -->
        <SolidColorBrush x:Key="Bg0" Color="#0F1419"/>
        <SolidColorBrush x:Key="Bg1" Color="#1A1F2E"/>
        <SolidColorBrush x:Key="Bg2" Color="#242B3D"/>
        <SolidColorBrush x:Key="Card" Color="#2A3447"/>
        <SolidColorBrush x:Key="CardHover" Color="#344156"/>
        <SolidColorBrush x:Key="Stroke" Color="#3D4A5C"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#FF6B35"/>
        <SolidColorBrush x:Key="AccentPurpleBright" Color="#FF8C61"/>
        <SolidColorBrush x:Key="AccentPurpleDark" Color="#E85A2B"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#00D9FF"/>
        <SolidColorBrush x:Key="AccentCyanBright" Color="#33E0FF"/>
        <SolidColorBrush x:Key="AccentRed" Color="#FF6B35"/>
        <SolidColorBrush x:Key="AccentRedBright" Color="#FF8C61"/>
        <SolidColorBrush x:Key="AccentRedDark" Color="#E85A2B"/>
        <SolidColorBrush x:Key="Fg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FgSecondary" Color="#9BA3B4"/>
        <SolidColorBrush x:Key="Success" Color="#00E676"/>
        <SolidColorBrush x:Key="Error" Color="#FF3D00"/>
        
        <!-- Gradients Dynamiques -->
        <LinearGradientBrush x:Key="GradientPurple" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B35" Offset="0"/>
            <GradientStop Color="#E85A2B" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GradientCyan" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00D9FF" Offset="0"/>
            <GradientStop Color="#00B8DB" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GradientMixed" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B35" Offset="0"/>
            <GradientStop Color="#00D9FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Effets Ultra-Modernes -->
        <DropShadowEffect x:Key="PurpleGlow" Color="#FF6B35" BlurRadius="35" Opacity="0.9" ShadowDepth="0"/>
        <DropShadowEffect x:Key="CardShadow" Color="#000000" BlurRadius="30" Opacity="0.7" ShadowDepth="0"/>
        <DropShadowEffect x:Key="PurpleGlowStrong" Color="#FF6B35" BlurRadius="50" Opacity="1.0" ShadowDepth="0"/>
        <DropShadowEffect x:Key="CyanGlow" Color="#00D9FF" BlurRadius="40" Opacity="0.8" ShadowDepth="0"/>
        <DropShadowEffect x:Key="RedGlow" Color="#FF6B35" BlurRadius="35" Opacity="0.9" ShadowDepth="0"/>
        <DropShadowEffect x:Key="RedGlowStrong" Color="#FF6B35" BlurRadius="50" Opacity="1.0" ShadowDepth="0"/>
        <BlurEffect x:Key="GlassBlur" Radius="15"/>
        
        <!-- Storyboard pour animation de pulsation -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0.6" To="1.0" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Animation RGB Border - Nouvelle Palette Dynamique -->
        <Storyboard x:Key="RGBAnimation" RepeatBehavior="Forever">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Color" Duration="0:0:10">
                <LinearColorKeyFrame Value="#FF6B35" KeyTime="0:0:0"/>
                <LinearColorKeyFrame Value="#FF8C61" KeyTime="0:0:2"/>
                <LinearColorKeyFrame Value="#00D9FF" KeyTime="0:0:4"/>
                <LinearColorKeyFrame Value="#33E0FF" KeyTime="0:0:6"/>
                <LinearColorKeyFrame Value="#00E676" KeyTime="0:0:8"/>
                <LinearColorKeyFrame Value="#FF6B35" KeyTime="0:0:10"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Enhanced Feature Card Style with Glassmorphism and Smooth Animations -->
        <Style x:Key="FeatureCard" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Outer glow layer -->
                            <Border x:Name="outerGlow"
                                    Background="Transparent"
                                    BorderBrush="#FF6B35"
                                    BorderThickness="3"
                                    CornerRadius="24"
                                    Opacity="0">
                                <Border.Effect>
                                    <BlurEffect Radius="30"/>
                                </Border.Effect>
                            </Border>
                            
                            <!-- Main card with glassmorphism -->
                            <Border x:Name="border"
                                    Background="#2A3447" 
                                    BorderBrush="{StaticResource Stroke}"
                                    BorderThickness="3"
                                    CornerRadius="22"
                                    Effect="{StaticResource CardShadow}">
                                <Border.OpacityMask>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#DD000000" Offset="0"/>
                                        <GradientStop Color="#99000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.OpacityMask>
                                <ContentPresenter/>
                            </Border>
                            
                            <!-- Shimmer overlay effect -->
                            <Border x:Name="shimmer"
                                    CornerRadius="22"
                                    IsHitTestVisible="False"
                                    Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="#30FF6B35" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                      To="#FF6B35"
                                                      Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="outerGlow"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.6"
                                                       Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="shimmer"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.4"
                                                       Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.03"
                                                       Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.03"
                                                       Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                      To="#3D4A5C"
                                                      Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="outerGlow"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="shimmer"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.0"
                                                       Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.0"
                                                       Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#334155"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Toggle Switch with Smooth Animations and Pulse Effect -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <!-- Pulsing outer glow when active -->
                            <Border x:Name="PulseGlow"
                                    Width="60" 
                                    Height="36"
                                    Background="Transparent"
                                    BorderBrush="#FF6B35"
                                    BorderThickness="3"
                                    CornerRadius="18"
                                    Opacity="0">
                                <Border.Effect>
                                    <BlurEffect Radius="22"/>
                                </Border.Effect>
                            </Border>
                            
                            <Border x:Name="ToggleBorder" 
                                    Width="56" 
                                    Height="32" 
                                    Background="#3D4A5C" 
                                    CornerRadius="16">
                                <Ellipse x:Name="ToggleCircle" 
                                         Width="26" 
                                         Height="26" 
                                         Fill="White" 
                                         HorizontalAlignment="Left" 
                                         Margin="3,3,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect x:Name="CircleShadow" 
                                                        Color="Black" 
                                                        BlurRadius="10" 
                                                        Opacity="0.6" 
                                                        ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="CircleTransform" X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ToggleBorder"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#FF6B35"
                                                          Duration="0:0:0.25">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <DoubleAnimation Storyboard.TargetName="CircleTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="26"
                                                           Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="CircleShadow"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#FF6B35"
                                                          Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="PulseGlow"
                                                           Storyboard.TargetProperty="Opacity"
                                                           From="0" To="0.8" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <BeginStoryboard x:Name="PulseStoryboard">
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="PulseGlow"
                                                           Storyboard.TargetProperty="Opacity"
                                                           From="0.3" To="0.8" Duration="0:0:1.5"
                                                           AutoReverse="True">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ToggleBorder"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#3D4A5C"
                                                          Duration="0:0:0.25">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <DoubleAnimation Storyboard.TargetName="CircleTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="CircleShadow"
                                                          Storyboard.TargetProperty="Color"
                                                          To="Black"
                                                          Duration="0:0:0.25"/>
                                            <DoubleAnimation Storyboard.TargetName="PulseGlow"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <StopStoryboard BeginStoryboardName="PulseStoryboard"/>
                                </Trigger.ExitActions>
                                <Setter TargetName="ToggleBorder" Property="Effect" Value="{StaticResource PurpleGlow}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Toggle Switch -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" 
                                Background="{StaticResource Stroke}" 
                                BorderBrush="{StaticResource AccentPurple}" 
                                BorderThickness="2" 
                                CornerRadius="17">
                            <Grid>
                                <Ellipse x:Name="thumb" 
                                         Width="28" 
                                         Height="28" 
                                         Margin="3"
                                         HorizontalAlignment="Left"
                                         Fill="{StaticResource Fg}">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="thumbTransform" X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="thumbTransform" 
                                                             Storyboard.TargetProperty="X" 
                                                             To="35" 
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="thumbTransform" 
                                                             Storyboard.TargetProperty="X" 
                                                             To="0" 
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentPurple}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Stroke}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Modern Button with Animations and Ripple Effect -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Glow layer -->
                            <Border x:Name="GlowBorder"
                                    Background="Transparent"
                                    BorderBrush="#FF6B35"
                                    BorderThickness="3"
                                    CornerRadius="16"
                                    Opacity="0">
                                <Border.Effect>
                                    <BlurEffect Radius="22"/>
                                </Border.Effect>
                            </Border>
                            
                            <!-- Main button -->
                            <Border x:Name="ButtonBorder"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="14"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="ButtonShadow"
                                                    Color="#FF6B35" 
                                                    BlurRadius="22" 
                                                    Opacity="0.7" 
                                                    ShadowDepth="0"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ButtonBorder"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="#FF8C61"
                                                      Duration="0:0:0.2">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1.0"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="32"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ButtonBorder"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="#FF6B35"
                                                      Duration="0:0:0.2">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="22"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.0"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.0"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="0.95"
                                                       Duration="0:0:0.05"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="0.95"
                                                       Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05"
                                                       Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05"
                                                       Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Tab Button with Enhanced Animations -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource FgSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="26,18"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="Transparent" 
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="12">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Animated underline -->
                            <Border x:Name="underline"
                                    Height="4"
                                    Background="{StaticResource AccentPurple}"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="2,2,0,0"
                                    Opacity="0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF6B35" BlurRadius="15" Opacity="1.0" ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                      To="#FF8C61"
                                                      Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="#2A3447"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="underline"
                                                       Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="0.7"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="underline"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.7"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                      To="#9BA3B4"
                                                      Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="Transparent"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="underline"
                                                       Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="0"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="underline"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Active">
                                <Setter Property="Foreground" Value="{StaticResource AccentPurpleBright}"/>
                                <Setter TargetName="border" Property="Background" Value="#2A3447"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="underline"
                                                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.0"
                                                           Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="underline"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1.0"
                                                           Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Typographie -->
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        </Style>

        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        </Style>

        <Style x:Key="H3" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        </Style>

        <!-- Enhanced ToolTip Style -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#344156"/>
            <Setter Property="BorderBrush" Value="#FF6B35"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border x:Name="ToolTipBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B35" BlurRadius="25" Opacity="0.8" ShadowDepth="0"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ToolTipScale" ScaleX="0.9" ScaleY="0.9"/>
                            </Border.RenderTransform>
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ToolTipScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1.0"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ToolTipScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1.0"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ToolTipBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       From="0" To="1"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          Grid.Column="2" 
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{StaticResource Bg2}" 
                                                BorderBrush="{StaticResource Stroke}" 
                                                BorderThickness="0,0,1,0"
                                                CornerRadius="0,8,8,0"
                                                Width="30">
                                            <Path x:Name="Arrow" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  Data="M 0 0 L 4 4 L 8 0 Z" 
                                                  Fill="{StaticResource Fg}"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" 
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="12,0,23,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="12,0,23,0"
                                     Focusable="True"
                                     Background="Transparent"
                                     Foreground="{StaticResource Fg}"
                                     BorderThickness="0"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Background="{StaticResource Bg2}"
                                        BorderBrush="{StaticResource Stroke}"
                                        BorderThickness="1"
                                        CornerRadius="0,0,8,8">
                                    <ScrollViewer Margin="4,6,4,6" 
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{StaticResource FgSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="{StaticResource Bg2}"/>
                    <Setter Property="Foreground" Value="{StaticResource Fg}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Bd" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{StaticResource Stroke}"
                                        BorderThickness="0,0,0,1"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="true">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource CardHover}"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentPurple}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter Property="Foreground" Value="{StaticResource FgSecondary}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
        </Style>
            </Style.Resources>
        </Style>

        <!-- Enhanced Slider Style -->
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground"
                                    Grid.Row="1"
                                    Height="6"
                                    Background="{StaticResource Bg2}"
                                    BorderBrush="{StaticResource Stroke}"
                                    BorderThickness="1"
                                    CornerRadius="3"/>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <!-- Outer glow -->
                                                    <Ellipse x:Name="ThumbGlow"
                                                            Width="24" Height="24"
                                                            Fill="Transparent"
                                                            Stroke="#A855F7"
                                                            StrokeThickness="2"
                                                            Opacity="0">
                                                        <Ellipse.Effect>
                                                            <BlurEffect Radius="12"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <!-- Main thumb -->
                                                    <Ellipse Width="20" Height="20" 
                                                            Fill="{StaticResource AccentPurple}">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#A855F7" BlurRadius="12" Opacity="0.7" ShadowDepth="0"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbGlow"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0.8" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbGlow"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Button Style -->
        <Style x:Key="SliderRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced ScrollViewer Style -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                            
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                      Grid.Column="1"
                                      Value="{TemplateBinding VerticalOffset}"
                                      Maximum="{TemplateBinding ScrollableHeight}"
                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                      Orientation="Horizontal"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      Value="{TemplateBinding HorizontalOffset}"
                                      Maximum="{TemplateBinding ScrollableWidth}"
                                      ViewportSize="{TemplateBinding ViewportWidth}"
                                      Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="{StaticResource Bg1}" CornerRadius="4" Opacity="0.3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border x:Name="ThumbBorder"
                                                       Background="{StaticResource AccentPurple}"
                                                       CornerRadius="4"
                                                       Opacity="0.7">
                                                    <Border.Effect>
                                                        <DropShadowEffect x:Name="ThumbGlow"
                                                                        Color="#A855F7" 
                                                                        BlurRadius="10" 
                                                                        Opacity="0" 
                                                                        ShadowDepth="0"/>
                                                    </Border.Effect>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbBorder"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="1.0" Duration="0:0:0.15"/>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbGlow"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0.9" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbBorder"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0.7" Duration="0:0:0.15"/>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbGlow"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <!-- Fond principal -->
    <Border BorderBrush="{StaticResource Stroke}" BorderThickness="1" CornerRadius="0" Background="{StaticResource Bg0}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="70" Opacity="0.7" ShadowDepth="0" Color="#FF6B35"/>
        </Border.Effect>

        <Grid>
            <!-- Animated Background Layer -->
            <Canvas x:Name="BackgroundCanvas" ClipToBounds="True">
            <!-- Particle 1 - Orange -->
            <Ellipse Width="160" Height="160" Fill="#18FF6B35" Canvas.Left="100" Canvas.Top="50">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Particle1Transform"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="50"/>
                </Ellipse.Effect>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="Particle1Transform"
                                               Storyboard.TargetProperty="X"
                                               From="0" To="1600" Duration="0:0:25" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="Particle1Transform"
                                               Storyboard.TargetProperty="Y"
                                               From="0" To="800" Duration="0:0:20" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            
            <!-- Particle 2 - Teal -->
            <Ellipse Width="190" Height="190" Fill="#1500D9FF" Canvas.Left="900" Canvas.Top="600">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Particle2Transform"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="Particle2Transform"
                                               Storyboard.TargetProperty="X"
                                               From="0" To="-700" Duration="0:0:30" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="Particle2Transform"
                                               Storyboard.TargetProperty="Y"
                                               From="0" To="-500" Duration="0:0:22" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            
            <!-- Particle 3 - Light Orange -->
            <Ellipse Width="140" Height="140" Fill="#18FF8C61" Canvas.Left="1400" Canvas.Top="300">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Particle3Transform"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="45"/>
                </Ellipse.Effect>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="Particle3Transform"
                                               Storyboard.TargetProperty="X"
                                               From="0" To="-1200" Duration="0:0:28" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="Particle3Transform"
                                               Storyboard.TargetProperty="Y"
                                               From="0" To="600" Duration="0:0:18" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            
            <!-- Particle 4 - Green Accent -->
            <Ellipse Width="110" Height="110" Fill="#1500E676" Canvas.Left="500" Canvas.Top="750">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Particle4Transform"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="40"/>
                </Ellipse.Effect>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="Particle4Transform"
                                               Storyboard.TargetProperty="X"
                                               From="0" To="900" Duration="0:0:24" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="Particle4Transform"
                                               Storyboard.TargetProperty="Y"
                                               From="0" To="-650" Duration="0:0:19" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Canvas>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource Bg1}" BorderBrush="{StaticResource Stroke}" BorderThickness="0,0,0,1">
                <Grid Margin="25,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Grid>
                            <!-- RGB animated border -->
                            <Border x:Name="LogoRGBBorder"
                                    CornerRadius="16" 
                                    Padding="3"
                                    Background="Transparent"
                                    BorderThickness="3">
                                <Border.BorderBrush>
                                    <SolidColorBrush x:Name="LogoRGBBrush" Color="#FF6B35"/>
                                </Border.BorderBrush>
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF6B35" BlurRadius="28" Opacity="0.8" ShadowDepth="0"/>
                                </Border.Effect>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="LogoRGBBrush" 
                                                                            Storyboard.TargetProperty="Color" 
                                                                            Duration="0:0:12">
                                                    <LinearColorKeyFrame Value="#FF6B35" KeyTime="0:0:0"/>
                                                    <LinearColorKeyFrame Value="#FF8C61" KeyTime="0:0:2"/>
                                                    <LinearColorKeyFrame Value="#00D9FF" KeyTime="0:0:4"/>
                                                    <LinearColorKeyFrame Value="#33E0FF" KeyTime="0:0:6"/>
                                                    <LinearColorKeyFrame Value="#00E676" KeyTime="0:0:8"/>
                                                    <LinearColorKeyFrame Value="#FF8C61" KeyTime="0:0:10"/>
                                                    <LinearColorKeyFrame Value="#FF6B35" KeyTime="0:0:12"/>
                                                </ColorAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                
                                <Border CornerRadius="14" Background="{StaticResource Bg2}" Padding="14">
                                    <Image Source="pack://application:,,,/Trident.MITM.App;component/Assets/LOGO.png" 
                                           Height="48" Width="48" Stretch="Uniform"/>
                                </Border>
                            </Border>
                        </Grid>
                        
                        <StackPanel VerticalAlignment="Center" Margin="18,0,0,0">
                            <TextBlock Text="ARTHEMIS CONTROL" 
                                       FontSize="26" 
                                       FontWeight="ExtraBold" 
                                       Foreground="{StaticResource Fg}">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#FF6B35" BlurRadius="15" Opacity="0.6" ShadowDepth="0"/>
