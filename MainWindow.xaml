                                                       x:Name="DaysRemainingTextBlock"
                                                       Text="-" 
                                                       Foreground="{StaticResource Fg}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Margin="0,0,0,15"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                                       Text="{DynamicResource Status}" 
                                                       Foreground="{StaticResource FgSecondary}" 
                                                       FontSize="14"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                                       x:Name="LicenseStatusTextBlock"
                                                       Text="-" 
                                                       Foreground="{StaticResource Fg}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </ScrollViewer>
                        </Grid>
            </Grid>
        </ScrollViewer>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource Bg1}" BorderBrush="{StaticResource Stroke}" BorderThickness="0,1,0,0">
