<Window x:Class="Trident.MITM.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About ARTHEMIS CONTROL ULTIMATE" 
        Height="650" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        Background="#0A0E1A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="Bg0" Color="#0A0E1A"/>
        <SolidColorBrush x:Key="Bg1" Color="#111827"/>
        <SolidColorBrush x:Key="Bg2" Color="#1F2937"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#A855F7"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#06B6D4"/>
        <SolidColorBrush x:Key="Fg" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="FgSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="Stroke" Color="#475569"/>
        <DropShadowEffect x:Key="PurpleGlow" Color="#A855F7" BlurRadius="30" Opacity="0.8" ShadowDepth="0"/>
        <LinearGradientBrush x:Key="GradientPurple" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#A855F7" Offset="0"/>
            <GradientStop Color="#7C3AED" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border BorderBrush="{StaticResource Stroke}" BorderThickness="2" CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" Opacity="0.9" ShadowDepth="0" Color="#A855F7"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource GradientPurple}" CornerRadius="14,14,0,0" Padding="25">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Border Background="{StaticResource Bg2}" 
                                CornerRadius="12" 
                                Padding="10"
                                Width="60"
                                Height="60"
                                Margin="0,0,18,0">
                            <Image Source="pack://application:,,,/Trident.MITM.App;component/Assets/LOGO.png" 
                                   Stretch="Uniform"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ARTHEMIS CONTROL" 
                                       FontSize="26" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock Text="Professional Gamepad Control System" 
                                       FontSize="13" 
                                       Foreground="#E0E7FF"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Content="âœ•" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="#33FFFFFF"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="22"
                            Width="35"
                            Height="35"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="{StaticResource Bg0}">
                <StackPanel Margin="25">
                    
                    <!-- Version Info -->
                    <Border Background="{StaticResource Bg2}" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="15" Opacity="0.5" ShadowDepth="0"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Foreground="{StaticResource FgSecondary}" FontSize="14" Margin="0,0,18,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="6.0.4 ULTIMATE" Foreground="{StaticResource AccentPurple}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Build:" Foreground="{StaticResource FgSecondary}" Margin="0,0,15,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="2024.01.15" Foreground="{StaticResource Fg}" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Framework:" Foreground="{StaticResource FgSecondary}" Margin="0,0,15,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text=".NET 8.0 (WPF)" Foreground="{StaticResource Fg}" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Platform:" Foreground="{StaticResource FgSecondary}" Margin="0,0,15,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Windows 10/11 (x64)" Foreground="{StaticResource Fg}"/>
                        </Grid>
                    </Border>

                    <!-- Description -->
                    <TextBlock Text="ARTHEMIS CONTROL is a professional-grade gamepad enhancement software that provides advanced features like anti-recoil compensation, aim assist, rapid-fire, and comprehensive controller customization."
                               TextWrapping="Wrap"
                               Foreground="{StaticResource Fg}"
                               FontSize="13"
                               LineHeight="20"
                               Margin="0,0,0,20"/>

                    <!-- Features -->
                    <TextBlock Text="Features" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Fg}" Margin="0,0,0,10"/>
                    <Border Background="{StaticResource Bg2}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="âœ“ Advanced Anti-Recoil System" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ Professional Aim Assist (3 modes)" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ Configurable Rapid-Fire" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ Auto-Ping System" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ Game Profiles (Fortnite, COD, etc.)" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ Dead Zone Configuration" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ System Optimization Tools" Foreground="{StaticResource Fg}" Margin="0,0,0,5"/>
                            <TextBlock Text="âœ“ KB/M Hybrid Support" Foreground="{StaticResource Fg}"/>
                        </StackPanel>
                    </Border>

                    <!-- Links -->
                    <TextBlock Text="Links" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Fg}" Margin="0,0,0,10"/>
                    <Border Background="{StaticResource Bg2}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Foreground="{StaticResource FgSecondary}" Margin="0,0,0,5">
                                <Hyperlink NavigateUri="https://arthemiscontrol.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentPurple}">
                                    <TextBlock Text="ðŸŒ Website: arthemiscontrol.com"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource FgSecondary}" Margin="0,0,0,5">
                                <Hyperlink NavigateUri="https://github.com/MelAzedine/tt" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentCyan}">
                                    <TextBlock Text="ðŸ’» GitHub: github.com/MelAzedine/tt"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource FgSecondary}" Margin="0,0,0,5">
                                <Hyperlink NavigateUri="https://discord.gg/arthemis" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentPurple}">
                                    <TextBlock Text="ðŸ’¬ Discord: discord.gg/arthemis"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource FgSecondary}">
                                <Hyperlink NavigateUri="mailto:contact@arthemiscontrol.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentCyan}">
                                    <TextBlock Text="ðŸ“§ Email: contact@arthemiscontrol.com"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Credits -->
                    <TextBlock Text="Credits" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Fg}" Margin="0,0,0,10"/>
                    <Border Background="{StaticResource Bg2}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Developed by MelAzedine" Foreground="{StaticResource Fg}" Margin="0,0,0,10"/>
                            <TextBlock Text="Third-Party Components:" Foreground="{StaticResource FgSecondary}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="â€¢ ViGEm Bus (MIT License)" Foreground="{StaticResource Fg}" Margin="0,0,0,3"/>
                            <TextBlock Text="â€¢ HidSharp (Apache 2.0)" Foreground="{StaticResource Fg}" Margin="0,0,0,3"/>
                            <TextBlock Text="â€¢ SharpDX (MIT License)" Foreground="{StaticResource Fg}" Margin="0,0,0,3"/>
                            <TextBlock Text="â€¢ Nefarius.ViGEm.Client (MIT)" Foreground="{StaticResource Fg}"/>
                        </StackPanel>
                    </Border>

                    <!-- Copyright -->
                    <TextBlock Text="Â© 2024 MelAzedine. All Rights Reserved." 
                               Foreground="{StaticResource FgSecondary}" 
                               FontSize="11" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource Bg1}" CornerRadius="0,0,10,10" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="View Logs" 
                            Background="{StaticResource Bg2}"
                            Foreground="{StaticResource Fg}"
                            BorderBrush="{StaticResource Stroke}"
                            BorderThickness="1"
                            Padding="15,8"
                            FontSize="13"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Click="ViewLogs_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Check for Updates" 
                            Background="{StaticResource AccentPurple}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="18,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="CheckUpdates_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="10"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#A855F7" BlurRadius="15" Opacity="0.6" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#C084FC"/>
                                                    <Setter TargetName="border" Property="Effect" Value="{StaticResource PurpleGlow}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
